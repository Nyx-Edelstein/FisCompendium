@{
    ViewBag.Title = "Current Maps";
}

<style type="text/css">
    svg {
    }

    .hexfield {
        fill: transparent;
        stroke: none;
    }

    .hexfield:hover {
        stroke: whitesmoke;
    }

    .hexfield:focus {
        stroke: red;
        stroke-width: 2px;
        outline: none;
    }

    .hexfield:active {
        fill: red;
        outline: none;
    }

    .hexfield.selected {
        stroke: blue;
        stroke-width: 2px;
        outline: none;
    }

    .hexfield.highlighted {
        fill: blue;
        outline: none;
    }

    #hexgrid {
        position: absolute;
        left: 12px;
        top: 0px;
        z-index: 10;
    }

    #mapContainer {
        display: block;
        margin-left: 0px;
        margin-right: -20px;
        border: #202020;
        border-width: 10px;
        border-style: groove;
        width: 100%;
    }

    #map {
        min-width: 1004px;
        min-height: 753px;
        width: 98%;
        height: 98%;
    }
</style>
<script src="~/lib/hexgridwidget/hexgridwidget.js" type="text/javascript"></script>


<div class="row">
    <div class="col-12-md">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a href="#" class="nav-link active">Hyrule</a>
            </li>
            <li class="nav-item">
                <a href="DamageReport" class="nav-link">Hyrule - Damage Report</a>
            </li>
            <li class="nav-item">
                <a href="World" class="nav-link">World</a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active">
                <div class="row position-relative" id="mapContainer">
                    <img id="map" src="~/img/Hyrule Map.jpg" />
                    <div id="hexgrid"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var highlight = function (row, col) {
        var ele = `#hexgrid [hex-row=${row}][hex-column=${col}]`;
        $(ele).addClass('highlighted');
        $(ele).hide().show(0);
    }
    var unhighlight = function (row, col) {
        var ele = `#hexgrid [hex-row=${row}][hex-column=${col}]`;
        $(ele).removeClass('highlighted');
        $(ele).hide().show(0);
    }
    var select = function (row, col) {
        var ele = `#hexgrid [hex-row=${row}][hex-column=${col}]`
        $(ele).toggleClass('selected');
        $(ele).hide().show(0);
    }
    var rebuild = function () {
        var radius = 23;
        var columns = 28;
        var rows = 18;
        var cssClass = 'hexfield';
        $('#hexgrid').empty().hexGridWidget(radius, columns, rows, cssClass).on('hexclick', function (e) {
            console.log('clicked [' + e.row + ',' + e.column + ']' + ' hex with center at [' + e.center.x + ',' + e.center.y + ']');
        });
        $('#hexgrid .hexfield').click(function () {
            this.classList.toggle('focus');
        });
    };
    rebuild();
</script>